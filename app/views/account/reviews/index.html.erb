<div class="col-md-12">

  <h2 class="text-center"> 我发表过的评论 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 电影名称 </th>
        <th> 评论内容 </th>
        <th> 最后更新 </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td> <%= review.movie.title %> </td>
          <td> <%= review.content %> </td>
          <td> <%= review.updated_at %> </td>
          <td> <%= link_to('Edit', edit_movie_review_path(review.movie, review), class: "btn btn-default btn-xs") %></td>
          <td> <%= link_to('Delete', movie_review_path(review.movie, review), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
